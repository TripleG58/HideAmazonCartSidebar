    "name": "Hide Amazon™ Cart Sidebar",
    "description": "Hides the annoying Amazon™ cart/basket sidebar.",
    "version": "0.0.0.2",
    "content_scripts": [
        {
            "matches": ["https://*.amazon.com/*", "https://*.amazon.co.uk/*"],
            "css": ["HideSidebar.css"]
        }
    ],
    "manifest_version": 3
  }